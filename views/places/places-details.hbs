<div class='container'>

    <div class='row'>

        <div class='col-md-4'>
            <img src='https://media-cdn.tripadvisor.com/media/photo-s/12/4c/0a/ba/montecristo-country-house.jpg' alt='country house' />
        </div>

        <div class='col-md-8'>
            <h2> Place: {{name}}</h2>
            <h3> Description: </h3>
            {{#with place.task_info}}
                <h5>{{name}}</h5>
                <h5>{{working_hours}}</h5>
                <h5>{{description}}</h5>
            {{/with}}
            {{#with place.address}}
            <h5> Direction: {{road}}, {{number}} ({{city}})</h5>
            {{/with}}
            <h5> Rooms avail: {{place.rooms}}</h5>
        </div>
        {{#if session}}
        {{#if isPending}}
        <div class="md-4">
                <div class='form-group'>
            <form action='/places/application' method='post'>
                    <label for='date'>Start date</label>
                    <input type='date' name='start_date' id='start_date' class='form-control' />

                    <label for='date'>Final date</label>
                    <input type='date' name='final_date' id='final_date' class='form-control' />
                 
                     
                        <label for='applicant'>Cover Letter:</label>
                    <textarea type='' max="750" name='cover_letter' class='form-control' /></textarea>
                    <button type='submit' class='btn btn-outline-dark'>Submit application</button>
                    

                    <input type='text' name='host_id'  value="{{place.host_id}}" class='form-control' hidden/>
                    
                    <input type='text' name='place_id'  value="{{place.id}}" class='form-control' hidden/>
                    <input type='text' name='user_applicant' value="{{applicant_id}}"  class='form-control' hidden/>
                    
{{/if}}
{{#if isPro}}
                <button type='submit' class='btn btn-primary'>Delete</button>
                <button type='submit' class='btn btn-warning'>Edit</button>
{{/if}}
{{/if}}
                    
                
            </form>
        </div>
        </div>
    </div>

</div>