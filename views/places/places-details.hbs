<div class='container'>

    <div class='row'>

        <div class='col-md-4'>
            <img src='https://media-cdn.tripadvisor.com/media/photo-s/12/4c/0a/ba/montecristo-country-house.jpg' alt='country house' />
        </div>

        <div class='col-md-8'>
            <h2> Place: {{place_name}}</h2>
            <h3> Description: </h3>
                    {{#with description}}
                    <h5>{{name_description}}</h5>
                    {{/with}}
                    {{#with description.task}}
                        <h5>{{task_time}}</h5>
                <h5>{{task_description}}</h5>
                    {{/with}}
            <h5> Direction: {{direction}}</h5>
            <h5> Rooms avail: {{number_rooms}}</h5>
        </div>

    </div>

</div>