<div class='container'>

    <div class='row justify-content-center'>

        <div class='col-md-8 form shadow'>

            <form action='/places/new' method='post' enctype='multipart/form-data'>

                <div class='form-group'>
                    <label for='place_name'>Nombre del lugar</label>
                    <input type='text' class='form-control' id='place_name' name='name' />
                </div>
                <div class='form-group'>
                    <label for='name_description'>Task name</label>
                    <input type='text' class='form-control' name='task_name' id='task_name' />
                </div>
                <div class='form-group'>
                    <label for='task_description'>Description</label>
                    <input type='text' class='form-control' name='description' id='task_description' />
                    <small id='description-help' class='form-text text-muted'>Description of the task to do</small>
                </div>
                <div class='form-group'>
                    <label for='task_time'>Time</label>
                    <input type='number' class='form-control' name='working_hours' id='task_time' />
                    <small id='description-help' class='form-text text-muted'>time in hours per day</small>
                </div>
                <div class='form-group'>
                    <label for='number_rooms'>Num of rooms</label>
                    <input type='number' class='form-control' name='rooms' min='0' id='rooms' />
                    <small id='description-help' class='form-text text-muted'>Number of avail rooms</small>
                </div>
                <div class='form-group'>
                    <label for='road'>Address</label>
                    <input type='text' class='form-control' name='road' id='road' />
                    <small id='description-help' class='form-text text-muted'>Number of avail rooms</small>
                </div>
                <div class='form-group'>
                    <label for='number'>Number</label>
                    <input type='number' class='form-control' name='number' min='0' id='number' />
                    <small id='description-help' class='form-text text-muted'>Number of avail rooms</small>
                </div>
                <div class='form-group'>
                    <label for='city'>City</label>
                    <input type='text' class='form-control' name='city' min='0' id='city' />
                    <small id='description-help' class='form-text text-muted'>Number of avail rooms</small>
                </div>
                <div class='form-group'>
                    <label for='state'>State</label>
                    <input type='text' class='form-control' name='state' id='state' />
                    <small id='description-help' class='form-text text-muted'>Number of avail rooms</small>
                </div>
                <div class='custom-file'>
                    <label for='image' class="custom-file-label">Add your photo here...</label>
                    <input type='file' name='image' class='custom-file-input' id='image' />
                </div>

                <hr>

                <button type='submit' class='btn btn-outline-primary'>Submit</button>
            </form>
        </div>
    </div>
</div>
